{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/mcp/manifest",
      "dest": "/api/mcp/manifest.js"
    },
    {
      "src": "/api/mcp/tools/(.*)",
      "dest": "/api/mcp/tools/$1.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/soul",
      "dest": "/soul.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
